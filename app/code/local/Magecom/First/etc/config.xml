<?xml version="1.0"?>

<config>
    <modules>
        <Magecom_First>
            <version>1.0.0</version>
        </Magecom_First>
    </modules>

    <global>
        <blocks>
            <magecom_first>
                <class>Magecom_First_Block
                        </class>
            </magecom_first>
        </blocks>
    </global>

    <frontend>
        <routers>
            <magecom_first>
                <use>standard</use>
                <args>
                    <module>Magecom_First</module>
                    <frontName>magecom</frontName>
                </args>
            </magecom_first>
        </routers>
        <layout>
            <updates>
                <magecom_first>
                    <file>magecom_first.xml</file>
                </magecom_first>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <test>
                                            <title>Test - All</title>
                                        </test>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

</config>
