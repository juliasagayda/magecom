<?xml version="1.0"?>

<config>
    <modules>
        <Magecom_First>
            <version>1.0.0</version>
        </Magecom_First>
    </modules>
    <global>
        <blocks type="magecom_first/test" template ="magento/my/form.phtml">
            <magecom_first>
                <class>Magecom_First_Block</class>
            </magecom_first>
        </blocks>

        <models>
            <magecom_first>
                <class>Magecom_First_Model</class>
                <resourceModel>magecom_first_resource</resourceModel>
            </magecom_first>


        <magecom_first_resource>
            <class>Magecom_First_Model_Resource</class>
            <entities>
                <posts>
                    <table>magecom_first_post</table>
                </posts>
            </entities>
        </magecom_first_resource>

        </models>

        <resources>
            <magecom_first_setup>
                <setup>
                    <module>Magecom_First</module>
                </setup>
            </magecom_first_setup>
        </resources>
        <helpers>
            <magecom_first>
                <class>Magecom_First_Helper</class>
            </magecom_first>
        </helpers>

    </global>


    <!--<admin>-->
        <!--<routers>-->
            <!--<magecom_first>-->
                <!--<use>admin</use>-->
                <!--<args>-->
                    <!--<module>Magecom_First</module>-->
                    <!--<frontName>magecom</frontName>-->
                <!--</args>-->
                    <!--</magecom_first>-->
        <!--</routers>-->
    <!--</admin>-->

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <magecom_first before="Mage_Adminhtml">Magecom_First_Adminhtml</magecom_first>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <frontend>
        <routers>
        <magecom_first>
            <use>standard</use>
            <args>
                <module>Magecom_First</module>
                <frontName>magecom</frontName>
            </args>
                </magecom_first>
        </routers>
        <layout>
            <updates>
                <magecom_first>
                    <file>magecom_first.xml</file>
                </magecom_first>
            </updates>
        </layout>
    </frontend>
</config>
